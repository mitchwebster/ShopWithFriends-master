<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mitchwebster.shopwithfriends" >

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!--
         The following two permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!--
 To retrieve OAuth 2.0 tokens or invalidate tokens to disconnect a user. This disconnect
     option is required to comply with the Google+ Sign-In developer policies
    -->
    <!-- <uses-permission android:name="android.permission.USE_CREDENTIALS" /> &lt;!&ndash; To retrieve the account name (email) as part of sign-in: &ndash;&gt; -->
    <!-- <uses-permission android:name="android.permission.GET_ACCOUNTS" /> &lt;!&ndash; To auto-complete the email text field in the login form with the user's emails &ndash;&gt; -->
    <!-- <uses-permission android:name="android.permission.READ_PROFILE" /> -->
    <!-- <uses-permission android:name="android.permission.READ_CONTACTS" /> -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_color"
        android:label="@string/app_name"
        android:theme="@style/CustomActionBarTheme" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyDjI6RtSQOMVZURvpjoGiM3oHeH1uAmUzA" />

        <activity
            android:name=".Activities.SplashScreen"
            android:label="@string/title_activity_splash_screen"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.Register"
            android:label="@string/title_activity_register"
            tools:ignore="InnerclassSeparator">
        </activity>
        <activity
            android:name=".Activities.Login"
            android:label="@string/title_activity_login"
            tools:ignore="InnerclassSeparator">
        </activity>
        <activity
            android:name=".Activities.Friend_Profile"
            android:label="@string/title_activity_friend__profile"
            tools:ignore="InnerclassSeparator">
        </activity>
        <activity
            android:name=".Activities.Nav"
            android:label="@string/title_activity_nav"
            android:windowSoftInputMode="adjustPan|adjustResize"
            tools:ignore="InnerclassSeparator">
        </activity>
        <activity
            android:name=".Activities.Forgot_Password"
            android:label="@string/title_activity_forgot__password"
            tools:ignore="InnerclassSeparator">
        </activity>
    </application>

</manifest>
