<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mitchwebster.shopwithfriends.Activities.Forgot_Password">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Reset Password"
        android:id="@+id/textView2"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/activationReset"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/emailToReset"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activationReset"
        android:hint="Activation Code"
        android:layout_below="@+id/emailToReset"
        android:layout_marginTop="29dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordReset"
        android:layout_below="@+id/activationReset"
        android:layout_marginTop="36dp"
        android:hint="New Password"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        tools:ignore="HardcodedText,TextFields" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmReset"
        android:layout_marginTop="42dp"
        android:hint="Confirm Password"
        android:layout_below="@+id/passwordReset"
        android:layout_alignEnd="@+id/passwordReset"
        android:layout_alignStart="@+id/passwordReset"
        tools:ignore="HardcodedText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="submitPasswordReset"
        android:id="@+id/button"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="53dp"
        android:layout_alignEnd="@+id/confirmReset"
        android:layout_alignStart="@+id/confirmReset"
        tools:ignore="HardcodedText" />
</RelativeLayout>
