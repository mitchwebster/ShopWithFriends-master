<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mitchwebster.shopwithfriends.Add_Friend">



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/friendUsername"
        android:clickable="false"
        android:editable="true"
        android:hint="@string/friend_email"
        android:layout_alignParentTop="false"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15pt"
        tools:ignore="Deprecated" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add!"
        android:id="@+id/friend_search"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_toRightOf="@+id/friendUsername"
        android:layout_alignTop="@+id/friendUsername"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/friendUsername"
        android:layout_marginLeft="5pt"
        tools:ignore="HardcodedText" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="more friends,"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:textColor="#4b000000"
        tools:ignore="HardcodedText,UnknownIdInLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="more fun!"
        android:id="@+id/textView6"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="#80000000"
        tools:ignore="HardcodedText" />



</RelativeLayout>
